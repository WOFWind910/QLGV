@model QuanLyGiaoVu.Data.Hocvien

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div>
    <h4>Học viên</h4>
    <hr />
    <dl class="row bg-light rounded-2 p-2">
        <dt class = "col-sm-2">
            Họ học viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hohv)
        </dd>
        <dt class = "col-sm-2">
            Tên học viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenhv)
        </dd>
        <dt class = "col-sm-2">
            Ngày sinh
        </dt>
        <dd class = "col-sm-10">
            @Model.Ngaysinh.ToString("dd/MM/yyyy")
        </dd>
        <dt class = "col-sm-2">
            Giới tính
        </dt>
        <dd class = "col-sm-10">
            @(Model.Gioitinh ? "Nam" : "Nữ")
        </dd>
        <dt class = "col-sm-2">
            Số điện thoại phụ huynh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sodienthoaiphuhuynh)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Mahocvien" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary" >Quay lại</a>
    </form>
</div>
