@model QuanLyGiaoVu.Data.Thongtinchitietlophoc

@{
    ViewData["Title"] = "ThemHV";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<h1>Thêm Học Viên Vào Lớp Học</h1>
<hr />
<div class="row bg-light rounded-2 p-2">
    <div class="col-md-4">
        <form asp-action="ThemHV">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mahocvien" class="control-label">Họ và tên học viên</label>
                <select asp-for="Mahocvien" class ="form-control" asp-items="ViewBag.Mahocvien"></select>
            </div>
            <div class="form-group">
                <label asp-for="Malophoc" class="control-label">Lớp học</label>
                <select asp-for="Malophoc" class ="form-control" asp-items="ViewBag.Malophoc"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm học viên" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ChiTietLH" class="btn btn-primary my-2">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
