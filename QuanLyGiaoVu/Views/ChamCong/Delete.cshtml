@model QuanLyGiaoVu.Data.Thongtinchamcong

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}


<h4>Thông tin chấm công</h4>
<hr />
<div>
    <dl class="row bg-light rounded-2 p-2">
        <dt class="col-sm-2">
            Giáo viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MagiaovienNavigation.Hogv)
            @Html.DisplayFor(model => model.MagiaovienNavigation.Tengv)
        </dd>
        <dt class="col-sm-2">
            Lớp học
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MalophocNavigation.Tenlophoc)
        </dd>
        <dt class="col-sm-2">
            Thời gian chấm công
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thoigianchamcong)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Sott" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="TraCuuChamCong" class="btn btn-primary ">Quay lại</a>
    </form>
</div>