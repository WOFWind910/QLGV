@model QuanLyGiaoVu.Data.Loiquytrinh

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<h4>Kiểm tra quy trình</h4>
<hr />
<div class="row bg-light rounded-2 p-2">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Maloi" />
            <div class="form-group">
                <label asp-for="Magiaovien" class="control-label">Giáo viên</label>
                <select asp-for="Magiaovien" class="form-control" asp-items="ViewBag.Magiaovien"></select>
                <span asp-validation-for="Magiaovien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Malophoc" class="control-label">Lớp học</label>
                <select asp-for="Malophoc" class="form-control" asp-items="ViewBag.Malophoc"></select>
                <span asp-validation-for="Malophoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenloi" class="control-label">Tên lỗi</label>
                <input asp-for="Tenloi" class="form-control" />
                <span asp-validation-for="Tenloi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motaloi" class="control-label">Mô tả lỗi</label>
                <input asp-for="Motaloi" class="form-control" />
                <span asp-validation-for="Motaloi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngayvipham" class="control-label">Ngày vi phạm</label>
                <input asp-for="Ngayvipham" class="form-control" type="date" />
                <span asp-validation-for="Ngayvipham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary my-2">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
